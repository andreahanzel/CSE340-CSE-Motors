<!-- views/account/update.ejs -->
<div class="update-account-page">
    <h1><%= title %></h1>

    <% if (messages() && Object.keys(messages()).length > 0) { %>
        <div id="messages">
            <ul class="notice">
            <% Object.values(messages()).forEach(message => { %>
                <li><%= message %></li>
            <% }) %>
            </ul>
        </div>
    <% } %>

    <% if (errors) { %>
        <div id="messages">
            <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
            </ul>
        </div>
    <% } %>

    <div class="update-forms-container">
        <!-- Account Update Form -->
        <form action="/account/update" method="post" class="update-form">
            <h2>Update Account Information</h2>
            <div class="form-group">
                <label for="account_firstname">First Name:</label>
                <input type="text" 
                       id="account_firstname" 
                       name="account_firstname" 
                       value="<%= locals.accountData ? accountData.account_firstname : '' %>" 
                       required>
            </div>

            <div class="form-group">
                <label for="account_lastname">Last Name:</label>
                <input type="text" 
                       id="account_lastname" 
                       name="account_lastname" 
                       value="<%= locals.accountData ? accountData.account_lastname : '' %>" 
                       required>
            </div>

            <div class="form-group">
                <label for="account_email">Email:</label>
                <input type="email" 
                       id="account_email" 
                       name="account_email" 
                       value="<%= locals.accountData ? accountData.account_email : '' %>" 
                       required>
            </div>

            <input type="hidden" 
                   name="account_id" 
                   value="<%= locals.accountData ? accountData.account_id : '' %>">
            
            <button type="submit" class="form-button">Update Account</button>
        </form>

        <!-- Password Update Form -->
        <form action="/account/update-password" method="post" class="update-form password-form">
            <h2>Change Password</h2>
            
            <div class="password-info">
                <h3>Password Requirements:</h3>
                <ul>
                    <li>12 characters minimum</li>
                    <li>At least 1 uppercase letter</li>
                    <li>At least 1 lowercase letter</li>
                    <li>At least 1 number</li>
                    <li>At least 1 special character</li>
                </ul>
            </div>

            <div class="form-group">
                <label for="account_password">New Password:</label>
                <input type="password" 
                       id="account_password" 
                       name="account_password" 
                       required>
            </div>

            <input type="hidden" 
                   name="account_id" 
                   value="<%= locals.accountData ? accountData.account_id : '' %>">
            
            <button type="submit" class="form-button">Change Password</button>
        </form>
    </div>
</div>