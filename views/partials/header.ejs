<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
  
    <div id="tools">
      <% if (locals.loggedin) { %>
        <span class="welcome">
          WELCOME 
          <% if (locals.accountData && locals.accountData.account_firstname) { %>
            <a href="/account/" class="account-link">
              <%= locals.accountData.account_firstname.toUpperCase() %>
            </a>
          <% } else { %>
            <strong>NO ACCOUNT NAME</strong>
          <% } %>
        </span>
        <a href="/account/logout" class="logout">LOGOUT</a>
      <% } else { %>
        <a title="Click to log in" href="/account/login" class="login-link">MY ACCOUNT</a>
      <% } %>
    </div>
  </header>
  