<div class="add-classification">
    <h1>Add New Classification</h1>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/inv/add-classification" method="POST" class="add-classification-form">
        <p>Note: Classification name cannot contain spaces or special characters.</p>
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input type="text" id="classification_name" name="classification_name" 
                pattern="[A-Za-z]+" required>
        </div>
        <button type="submit" class="submit-button">Add Classification</button>
    </form>
</div>