<div class="delete-classification">
    <h1>Delete Classification</h1>
    
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <!-- Form now redirects to the confirmation page instead of deleting immediately -->
    <form action="/inv/delete-classification-confirm" method="GET" class="delete-classification-form">
        <p>Choose a classification to delete:</p>
        <div class="form-group">
            <label for="classification_id">Classification:</label>
            <select name="classification_id" id="classification_id" required>
                <option value="">Select a Classification</option>
                <% classifications.forEach(classification => { %>
                    <option value="<%= classification.classification_id %>">
                        <%= classification.classification_name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="submit-button">Continue</button>
    </form>
</div>
